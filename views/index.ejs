<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de usuários cadastrados</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Listagem de Usuários</h1>


    <form method="post">
        <input type="text" name="pesquisa">
        <input type="submit" value="Pesquisar">
    </form>


    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Senha</th>
            <th>Foto</th>
            <th>Editar</th>
            <th>Deleta</th>
        </tr>

        <% Usuarios.forEach(function(usuario){ %>
            <tr>
                <td> <%=usuario._id%> </td>
                <td> <%=usuario.nome%> </td>
                <td> <%=usuario.email%> </td>
                <td> <%=usuario.senha%> </td>
                <td><img class="imagem" src="/usuarios/<%=usuario.foto%>"></td>
                <td>
                    <a href="/edt/<%=usuario._id%>">
                        <img class="editar" src="/edit.png">
                    </a>
                </td>
                <td>
                    <a href="/del/<%=usuario._id%>">
                        <img class="lixeira" src="/lixeira.png">
                    </a>
                </td>
            </tr>
        <% }); %>

    </table>

    <% if(typeof msg !== "undefined"){ %>
        <h1><%=msg%></h1>
    <% } %>

    <p><a href="/add">Adicionar Usuário</a></p>
</body>
</html>